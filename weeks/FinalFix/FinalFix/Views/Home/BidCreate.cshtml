
@model FinalFix.Models.Bid


@{
    ViewBag.Title = "CreateBid";
}

<h2>Create a Bid</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Buyer.BuyerName, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.Buyer.BuyerName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Buyer.BuyerName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item.ItemName, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.Item.ItemName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Item.ItemName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriceOfItem, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.PriceOfItem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PriceOfItem, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Create" class="btn btn-lg" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back", "Items")
</div>