@model hw8.Models.Artist

@{
    ViewBag.Title = "CreateArtist";
}

<h2>CreateArtist</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ArtistName, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.ArtistName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ArtistName, "", new { @class = "text-danger" })
        </div>
        <p>Birthday Format: Year-month-day 00:00:00</p>
        <div class="form-group">
            @Html.LabelFor(model => model.ArtistDOB, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.ArtistDOB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ArtistDOB, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ArtistCity, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.ArtistCity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ArtistCity, "", new { @class = "text-danger" })
        </div>
       
        <div class="form-group">
            <div>
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back", "Artists")
</div>
